<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.circularrangebar.Main2Activity">

    <com.circularrangebar.CircularRangeBar.CircularRangeBar
        android:id="@+id/circularRangeBar"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:circle_progress_color="#ff0000ff"
        app:circle_stroke_width="26dp"
        app:end_angle="270"
        app:max="360"
        app:progress="0"
        app:start_angle="270"
        app:thumb_radius="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circularRangeBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="6am"
        android:textColor="@android:color/darker_gray" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/circularRangeBar"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:text="12am"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/circularRangeBar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:text="12pm"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circularRangeBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="6pm"
        android:textColor="@android:color/darker_gray" />


</RelativeLayout>
